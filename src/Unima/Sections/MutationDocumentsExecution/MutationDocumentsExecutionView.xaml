<TabItem x:Class="Unima.Sections.MutationDocumentsExecution.MutationDocumentsExecutionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Header="Test run">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
            <RowDefinition Height="310" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <materialDesign:Card Margin="8, 16, 16, 8" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" IsEnabled="{Binding TestNotStarted}">
            <StackPanel Orientation="Horizontal">
                <Label Content="Numbers of mutants in parallel: " Margin="16" />
                <Slider
                    TickFrequency="5"
                    Orientation="Horizontal"
                    Minimum="1"
                    Maximum="50"
                    Value="10"
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="16, 0, 16, 0"
                    Width="100"/>
                <Label Content="Run all tests: " Margin="16" />
                <ToggleButton
                    Style="{StaticResource MaterialDesignSwitchToggleButton}"
                    ToolTip="Run all unit tests for each mutation"
                    Margin="16"/>
                <Button Content="Run mutations" Command="{Binding RunCommand}" Margin="16, 0, 16, 0"/>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Margin="16, 16, 8, 8" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Button Content="See result from all mutations" Command="{Binding SeeAllMutationsCommand}" Margin="16" />
                <Button Content="See failed to compile mutations" Command="{Binding FailedToCompileCommand}" Margin="16" />
                <Button Content="Save report" Command="{Binding SaveReportCommand}" Margin="16" />
            </StackPanel>
        </materialDesign:Card>

        <GroupBox
            Header="Status"
            Style="{DynamicResource MaterialDesignCardGroupBox}"
            Margin="16"
            Grid.Row="1"
            Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <materialDesign:Card
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    Padding="0"
                    Grid.Column="0"
                    Margin="0, 0, 16, 8"
                    VerticalAlignment="Bottom">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                            Height="*" />
                            <RowDefinition
                            Height="*" />
                            <RowDefinition
                            Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="16 16 16 4"
                            Style="{StaticResource MaterialDesignCaptionTextBlock}">
                            Number of mutations
                            </TextBlock>
                        <Separator
                        Grid.Row="1"
                        Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                        Grid.Row="2"
                        Margin="16 0 16 8"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                        Text="{Binding MutationCount}" />
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    Padding="0"
                    Grid.Column="1"
                    Margin="0, 0, 16, 8"
                    VerticalAlignment="Bottom">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="16 16 16 4"
                            Style="{StaticResource MaterialDesignCaptionTextBlock}">
                            Finished mutations
                        </TextBlock>
                        <Separator
                            Grid.Row="1"
                            Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="16 0 16 8"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Style="{StaticResource MaterialDesignCaptionTextBlock}"
                            Text="{Binding MutationDocumentsExecutionResults.FinishedMutationsCount}" />
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    Padding="0"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0, 0, 16, 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                            Height="*" />
                            <RowDefinition
                            Height="*" />
                            <RowDefinition
                            Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="16 16 16 4"
                            Style="{StaticResource MaterialDesignCaptionTextBlock}">
                            Mutations in queue
                        </TextBlock>
                        <Separator
                        Grid.Row="1"
                        Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                        Grid.Row="2"
                        Margin="16 0 16 8"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                        Text="{Binding MutationsInQueueCount}">
                        </TextBlock>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    Padding="0"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0, 0, 16, 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="16 16 16 4"
                            Style="{StaticResource MaterialDesignCaptionTextBlock}">
                            Mutations failed to compile
                        </TextBlock>
                        <Separator
                            Grid.Row="1"
                            Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="16 0 16 8"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Style="{StaticResource MaterialDesignCaptionTextBlock}"
                            Text="{Binding MutationDocumentsExecutionResults.FailedToCompileMutationsCount}" />
                    </Grid>
                </materialDesign:Card>


                <materialDesign:Card
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    Padding="0"
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    Margin="0, 0, 0, 0"
                    VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="16 16 16 4"
                            Style="{StaticResource MaterialDesignCaptionTextBlock}">
                            Current mutation score
                        </TextBlock>
                        <Separator
                            Grid.Row="1"
                            Style="{StaticResource MaterialDesignLightSeparator}" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="16 0 16 8"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Style="{StaticResource MaterialDesignDisplay3TextBlock}"
                            Text="{Binding MutationDocumentsExecutionResults.MutationScore}" />
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </GroupBox>

        <GroupBox
            Header="Statistics"
            Style="{DynamicResource MaterialDesignCardGroupBox}"
            Margin="16"
            Grid.Row="1"
            Grid.Column="1">
            <wpf:PieChart LegendLocation="Bottom" Hoverable="True" DataTooltip="{x:Null}" Series="{Binding MutationStatistics}">
            </wpf:PieChart>
        </GroupBox>

        <Grid Grid.Row="2" Grid.Column="0">
            <GroupBox
                Header="Mutations"
                Style="{DynamicResource MaterialDesignCardGroupBox}"
                Margin="16">
                <ScrollViewer>
                    <DataGrid
                        SelectionUnit="FullRow"
                        AutoGenerateColumns="False"
                        IsReadOnly="False"
                        ItemsSource="{Binding RunningDocuments}"
                        CanUserAddRows="false"
                        Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="File" Binding="{Binding Document.FileName}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Where" Binding="{Binding Document.MutationInfo.Location.Where}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Line" Binding="{Binding Document.MutationInfo.Location.Line}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <GroupBox
                Header="Survived mutations"
                Style="{DynamicResource MaterialDesignCardGroupBox}"
                Margin="16">
                <ScrollViewer>
                        <DataGrid
                              SelectionUnit="FullRow"
                              AutoGenerateColumns="False"
                              IsReadOnly="False"
                              ItemsSource="{Binding MutationDocumentsExecutionResults.SurvivedMutationDocuments}"
                              CanUserAddRows="false"
                              Grid.Row="1">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding CompletedDocumentSelectedCommand}" CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Where" Binding="{Binding Location.Where}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Line" Binding="{Binding Location.Line}" Width="*" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</TabItem>
